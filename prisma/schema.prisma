generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id  Int @id @default(autoincrement())
  name String 
  surname String?
  email String @unique
  password  String 
  role String?  //admin sus free null
  active  Boolean @default(true)
  accepNotifications Boolean @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt //actualiza automatico

  scores Score[]


}

model GameType{
  id Int @id @default(autoincrement())
  name String

  idDeck Int 
  deck Deck @relation(fields: [idDeck],references: [id])

  minRounds Int @default(1)
  maxRounds Int @default(999)

  maxUsers Int
  minUsers Int @default(2)

  Game Game[]
}



model Game{
  id Int @id @default(autoincrement())
  type String

  idGameTypeid Int
  idGameType GameType @relation(fields: [idGameTypeid], references: [id])


  rounds Round[]

  
}

model Score{
  
  @@id([idRound,idUser])
  value Int?
  winner Boolean?

  playing Boolean

  idRound Int
  round Round  @relation(fields:[idRound],references: [id])
  
  idUser Int
  user User @relation(fields:[idUser],references: [id])

}

model Deck{
  id Int @id @default(autoincrement())
  name String @unique
  
  
  gameType GameType[]
}

model Round{
  id Int @id @default(autoincrement())

  

  gameid Int
  game Game @relation(fields: [gameid], references: [id])

  Score Score[]

}


